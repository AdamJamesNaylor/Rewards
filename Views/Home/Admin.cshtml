@model Rewards.Controllers.HomeModel
@{
    ViewBag.Title = "AdminView";
}
<form actione="/home/admin" method="POST">
    <table>

    @for (int i = 0; i < Model.Kids.Count(); i++) {
        var kid = Model.Kids.ElementAt(i);
        <tr>
            <td>
                <img src="/@kid.Image" height="100"/>
            </td>
            <td>
                <h2 style="display: inline; width: 200px">@kid.Name</h2>
            </td>
            <td>
                <h1>@kid.Score</h1>
            </td>
            <td>
                <input type="hidden" value="@kid.Score" name="Kids[@i].Score" id="kidScore-@i" />
                <button type="submit" data-score="@(kid.Score - 1)" data-index="@i" class="score">&lt;</button>
                <button type="submit" data-score="@(kid.Score + 1)" data-index="@i" class="score">&gt;</button>
                <input type="hidden" value="@kid.Name" name="Kids[@i].Name"/>
                <input type="hidden" value="@kid.Image" name="Kids[@i].Image"/>
            </td>
        </tr>
    }
    </table>
</form>


<script type="text/javascript">

    $(document).ready(function() {
        $(".score").click(function() {
            var newScore = $(this).data("score");
            var index = $(this).data("index");
            $("#kidScore-" + index).val(newScore);
            return true;
        });
    });

</script>